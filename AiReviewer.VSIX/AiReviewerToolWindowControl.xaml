<UserControl x:Class="AiReviewer.VSIX.AiReviewerToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}">
    
    <UserControl.Resources>
        <!-- Filter Toggle Button Style -->
        <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#0E639C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505053"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#1177BB"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}">
            <TextBlock Text="AI Code Review Results" FontSize="16" FontWeight="Bold" 
                       Margin="10"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            <TextBlock Name="SummaryText" Text="No results yet. Click 'Review Staged Changes' to start." 
                       Margin="10,0,10,5" FontSize="11"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            
            <!-- Filter Buttons -->
            <StackPanel Name="FilterPanel" Orientation="Horizontal" Margin="10,0,10,10" Visibility="Collapsed">
                <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"/>
                <ToggleButton Name="FilterAllButton" Content="All" IsChecked="True" Click="FilterButton_Click"
                              Style="{StaticResource FilterToggleButtonStyle}" Tag="All"/>
                <ToggleButton Name="FilterHighButton" Content="ðŸ”´ High" Click="FilterButton_Click"
                              Style="{StaticResource FilterToggleButtonStyle}" Tag="High"/>
                <ToggleButton Name="FilterMediumButton" Content="ðŸŸ¡ Medium" Click="FilterButton_Click"
                              Style="{StaticResource FilterToggleButtonStyle}" Tag="Medium"/>
                <ToggleButton Name="FilterLowButton" Content="ðŸŸ¢ Low" Click="FilterButton_Click"
                              Style="{StaticResource FilterToggleButtonStyle}" Tag="Low"/>
            </StackPanel>
        </StackPanel>

        <!-- Learning Stats Panel (Collapsible) -->
        <Border Grid.Row="1" Name="LearningStatsPanel" Visibility="Collapsed"
                Background="#1E3A5F" Margin="5,5,5,0" CornerRadius="5">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ§  AI Learning System" FontWeight="Bold" FontSize="13" 
                               Foreground="#4EC9B0" VerticalAlignment="Center"/>
                    <Button Name="CloseStatsButton" Content="âœ•" Click="CloseStatsButton_Click"
                            Background="Transparent" Foreground="#888" BorderThickness="0"
                            FontSize="12" Cursor="Hand" HorizontalAlignment="Right" Margin="10,0,0,0"
                            ToolTip="Close stats panel"/>
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Accuracy -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,8">
                        <TextBlock Text="Overall Accuracy" Foreground="#888" FontSize="10"/>
                        <TextBlock Name="AccuracyText" Text="--%" FontSize="20" FontWeight="Bold" Foreground="#4EC9B0"/>
                    </StackPanel>
                    
                    <!-- Patterns -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Learned Patterns" Foreground="#888" FontSize="10"/>
                        <TextBlock Name="PatternsText" Text="--" FontSize="20" FontWeight="Bold" Foreground="#DCDCDC"/>
                    </StackPanel>
                    
                    <!-- Feedback Count -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,8">
                        <TextBlock Text="Total Feedback" Foreground="#888" FontSize="10"/>
                        <TextBlock Name="FeedbackCountText" Text="--" FontSize="16" FontWeight="Bold" Foreground="#DCDCDC"/>
                    </StackPanel>
                    
                    <!-- Helpful Rate -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock Text="Helpful Rate" Foreground="#888" FontSize="10"/>
                        <TextBlock Name="HelpfulRateText" Text="--%" FontSize="16" FontWeight="Bold" Foreground="#4EC9B0"/>
                    </StackPanel>
                    
                    <!-- Last Updated -->
                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
                        <TextBlock Name="LastAnalyzedText" Text="Last analyzed: Never" 
                                   Foreground="#666" FontSize="10" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ResultsList" Margin="5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}" 
                                BorderThickness="1" Margin="5,5,5,5" CornerRadius="5"
                                Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}">
                            <StackPanel Margin="10">
                                <!-- File and Line -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding SeverityIcon, Mode=OneWay}" FontSize="16" Margin="0,0,5,0"/>
                                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}">
                                        <Run Text="{Binding FilePath, Mode=OneWay}"/>
                                        <Run Text=":"/>
                                        <Run Text="{Binding LineNumber, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Issue -->
                                <TextBlock Text="{Binding Issue, Mode=OneWay}" TextWrapping="Wrap" Margin="0,5" FontWeight="SemiBold"
                                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>

                                <!-- Your Code -->
                                <Border Background="#2D2D30" Margin="0,5,0,5" CornerRadius="3" 
                                        Visibility="{Binding CodeSnippetVisibility}">
                                    <StackPanel Margin="8">
                                        <TextBlock Text="âŒ Your Code:" Foreground="#E74856" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CodeSnippet, Mode=OneWay}" FontFamily="Consolas" Foreground="#DCDCDC" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <!-- Fixed Code -->
                                <Border Background="#1E3A1E" Margin="0,5,0,5" CornerRadius="3"
                                        Visibility="{Binding FixedCodeVisibility}">
                                    <StackPanel Margin="8">
                                        <TextBlock Text="âœ… Fixed Code:" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding FixedCode, Mode=OneWay}" FontFamily="Consolas" Foreground="#DCDCDC" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <!-- Suggestion -->
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="ðŸ’¡ " FontSize="14"/>
                                    <TextBlock Text="{Binding Suggestion, Mode=OneWay}" TextWrapping="Wrap" 
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                                </StackPanel>

                                <!-- Rule and Confidence -->
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}" Margin="0,0,10,0">
                                        <Run Text="{Binding RuleIcon, Mode=OneWay}"/>
                                        <Run Text=" Rule: "/>
                                        <Run Text="{Binding Rule, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}">
                                        <Run Text="{Binding ConfidenceIcon, Mode=OneWay}"/>
                                        <Run Text=" Confidence: "/>
                                        <Run Text="{Binding Confidence, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Name="ApplyFixButton" Content="ðŸ”§ Apply Fix" 
                                            Click="ApplyFixButton_Click" Tag="{Binding}"
                                            Margin="0,0,10,0"
                                            Background="#0E639C" Foreground="White" BorderThickness="0"
                                            Cursor="Hand"
                                            Visibility="{Binding FixedCodeVisibility}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1177BB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Name="ViewInEditorButton" Content="ðŸ“„ Open File" 
                                            Click="ViewInEditorButton_Click" Tag="{Binding}"
                                            Background="#3E3E42" Foreground="White" BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#505053"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>

                                <!-- Feedback Buttons -->
                                <Border BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0,10,0,0"
                                        BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}">
                                    <StackPanel>
                                        <TextBlock Text="Was this review helpful?" FontSize="11" 
                                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                                                   Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Name="HelpfulButton" Content="ðŸ‘ Helpful" 
                                                    Click="HelpfulButton_Click" Tag="{Binding}"
                                                    Margin="0,0,8,0"
                                                    Background="#2D5A27" Foreground="White" BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Padding" Value="8,4"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#3A7A33"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Name="NotHelpfulButton" Content="ðŸ‘Ž Not Helpful" 
                                                    Click="NotHelpfulButton_Click" Tag="{Binding}"
                                                    Margin="0,0,8,0"
                                                    Background="#8B3A3A" Foreground="White" BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Padding" Value="8,4"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#A54545"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Name="CorrectItButton" Content="âœï¸ Correct It" 
                                                    Click="CorrectItButton_Click" Tag="{Binding}"
                                                    Background="#5A5A2D" Foreground="White" BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Provide your correction to help AI learn">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Padding" Value="8,4"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#7A7A3D"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="3" Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}" 
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}" 
                BorderThickness="0,1,0,0">
            <Grid Margin="10,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Name="ReviewButton" Content="ðŸ” Review Staged Changes" 
                        Grid.Column="0"
                        Click="ReviewButton_Click" 
                        HorizontalAlignment="Stretch"
                        Margin="0,0,8,0"
                        Background="#0E639C" Foreground="White" BorderThickness="0" FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="12,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1177BB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Name="ShowStatsButton" Content="ðŸ§  Stats" 
                        Grid.Column="1"
                        Click="ShowStatsButton_Click" 
                        HorizontalAlignment="Right"
                        Background="#3E3E42" Foreground="White" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="12,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#505053"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
